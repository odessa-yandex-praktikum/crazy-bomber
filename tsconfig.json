{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "declaration": false,
        "module": "commonjs",
        "strictNullChecks": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "lib": ["es2017", "es2016", "dom", "es5"],
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
            "Components/*": ["./components/*"],
            "Assets/*": ["./assets/*"],
        },
        "importHelpers": true
    },
    "exclude": ["**/node_modules/**/*", "**/*.spec.js"],
    "include": ["./src/**/*"]
}
